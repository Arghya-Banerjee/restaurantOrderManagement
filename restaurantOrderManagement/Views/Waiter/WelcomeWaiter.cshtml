@{
    ViewData["Title"] = "Welcome Waiter";
}

<div class="container mt-5">
    <div class="text-center">
        <!-- Greeting Message -->
        <h1 class="display-4 text-primary">Welcome, <span class="text-light">@ViewBag.UserId!</span></h1>
        <p class="lead text-light">We are glad to have you here.</p>
    </div>

    <!-- Action Boxes in a 2x2 Grid -->
    <div class="row mt-5">
        <!-- Box 1: Take an Order -->
        <div class="col-12 col-md-6 mb-4 d-flex justify-content-center">
            <div class="card text-center" style="width: 18rem; background-color: #1e1e1e; color: #ffffff; border: 1px solid #444;">
                <div class="card-body">
                    <h5 class="card-title">Take an Order</h5>
                    <p class="card-text">Quickly start taking a new order from a customer.</p>
                    <a href="/Waiter/WaiterTakeOrder" class="btn btn-primary">Take an Order</a>
                </div>
            </div>
        </div>

        <!-- Box 2: Add to Menu -->
        <div class="col-12 col-md-6 mb-4 d-flex justify-content-center">
            <div class="card text-center" style="width: 18rem; background-color: #1e1e1e; color: #ffffff; border: 1px solid #444;">
                <div class="card-body">
                    <h5 class="card-title">Add to Menu</h5>
                    <p class="card-text">Easily add new items to the restaurant's menu.</p>
                    <a href="/Waiter/WaiterAddMenuView" class="btn btn-primary">Add to Menu</a>
                </div>
            </div>
        </div>

        <!-- Box 3: Show Menu -->
        <div class="col-12 col-md-6 mb-4 d-flex justify-content-center">
            <div class="card text-center" style="width: 18rem; background-color: #1e1e1e; color: #ffffff; border: 1px solid #444;">
                <div class="card-body">
                    <h5 class="card-title">Show Menu</h5>
                    <p class="card-text">View all available items in the restaurant's menu.</p>
                    <a href="/Menu/ShowMenu" class="btn btn-primary">Show Menu</a>
                </div>
            </div>
        </div>

        <!-- Box 4: Show Current Orders -->
        <div class="col-12 col-md-6 mb-4 d-flex justify-content-center">
            <div class="card text-center" style="width: 18rem; background-color: #1e1e1e; color: #ffffff; border: 1px solid #444;">
                <div class="card-body">
                    <h5 class="card-title">Show Current Orders</h5>
                    <p class="card-text">Review and manage all ongoing orders.</p>
                    <a href="/Waiter/CurrentOrders" class="btn btn-primary">Show Current Orders</a>
                </div>
            </div>
        </div>
    </div>
</div>
