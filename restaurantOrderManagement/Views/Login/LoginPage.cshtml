@{
    ViewData["Title"] = "Login Page";
}

<link rel="stylesheet" href="~/css/Login/LoginPage.css" />

<div class="container-fluid login-page">
    <div class="row no-gutters">
        <!-- Left Panel (Login Form) -->
        <div class="col-lg-6 left-panel d-flex align-items-center justify-content-center">
            <div class="login-form">
                <h3 class="text-center text-light mb-4">Sign in to dashboard</h3>
                <form asp-controller="Login" asp-action="Validate" method="post">
                    <!-- Email Field -->
                    <div class="form-group mb-3">
                        <label for="username" class="form-label text-light">Username</label>
                        <input type="text" class="form-control" id="username" name="username" placeholder="Type your username" required>
                    </div>
                    <!-- Password Field -->
                    <div class="form-group mb-3">
                        <label for="password" class="form-label text-light">Password</label>
                        <input type="password" class="form-control" id="password" name="password" placeholder="Type your password" required>
                    </div>
                    <!-- Forgot Password -->
                    <div class="text-right mb-3">
                        <a href="/forgot-password" class="text-primary">Forgot Password?</a>
                    </div>
                    <!-- Login Button -->
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary btn-block">Login</button>
                    </div>
                    <!-- Register Link -->
                    <div class="text-center mt-3">
                        <p class="text-light">Don't have an account? <a asp-controller="Login" asp-action="Register" class="text-primary">Register</a></p>
                    </div>
                </form>
            </div>
        </div>

        <!-- Right Panel (Project Information) -->
        <div class="col-lg-6 right-panel d-flex align-items-center justify-content-center">
            <div class="info">
                <h1 class="text-white mb-3">Join Our Community</h1>
                <p class="text-light">Manage your restaurant seamlessly with our advanced <strong>Restaurant Management System</strong>. Track orders, monitor transactions, manage stock, and ensure your operations are smooth and scalable. Designed for modern restaurants, it combines ease of use with powerful features to support your daily needs.</p>
            </div>
        </div>
    </div>
</div>
